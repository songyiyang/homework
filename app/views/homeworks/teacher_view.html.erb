<h1 class='page-header'><%= @homework.subject %></h1>

<h2 class='questions'><span class='question-content'><%= @homework.content %></span></h2>

<table class="table table-striped table-hover table-bordered">

	<thead>
		<tr>
			<th style="width:150px">Username</th>
			<th>Latest Answer</th>
			<th style="width:350px">Answered At</th>
		</tr>
	</thead>

	<tbody>
		<% @answers.each do |answer| %>
			<tr>
				<td>
					<%= link_to answer.user.username, homeworks_student_answers_path(:id => @homework.id, :user_id => answer.user_id) %>
				</td>
				<td>
					<%= answer.content %>
				</td>
				<td>
					<%= answer.created_at.localtime.strftime('%b %e, %l:%M %p') %>
				</td>
			</tr>
		<% end %>
	</tbody>

</table>