<h1 class='page-header'><%= @homework.subject %></h1>

<h2 class='questions'>Question: <span class='question-content'><%= @homework.content %></span></h2>

<h2 class='questions-user'>Username: <span class='question-user-content'><%= @student.username %></span></h2>

<table class="table table-striped table-hover table-bordered">

	<thead>
		<tr>
			<th style="width:150px">Answer ID</th>
			<th>Answer</th>
			<th style="width:350px">Answered At</th>
		</tr>
	</thead>

	<tbody>
		<% @answers.each do |answer| %>
			<tr>
				<td>
					<%= answer.id %>
				</td>
				<td>
					<%= answer.content %>
				</td>
				<td>
					<%= answer.created_at.localtime.strftime('%b %e, %l:%M %p') %>
				</td>
			</tr>
		<% end %>
	</tbody>

</table>