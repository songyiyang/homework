<h1><%= @homework.subject %></h1>

<h2>Question: <%= @homework.content %></h2>

<h2>Username: <%= @student.username %></h2>

<table class="table table-striped table-hover table-bordered">

	<thead>
		<tr>
			<th>Answer ID</th>
			<th>Answer</th>
		</tr>
	</thead>

	<tbody>
		<% @answers.each do |answer| %>
			<tr>
				<td>
					<%= answer.id %>
				</td>
				<td>
					<%= answer.content %>
				</td>
			</tr>
		<% end %>
	</tbody>

</table>