<h1><%= @homework.subject %></h1>

<h2><%= @homework.content %></h2>

<table class="table table-striped table-hover table-bordered">

	<thead>
		<tr>
			<th>Username</th>
			<th>Latest Answer</th>
		</tr>
	</thead>

	<tbody>
		<% @answers.each do |answer| %>
			<tr>
				<td>
					<%= link_to answer.user.username, homeworks_student_answers_path(:id => @homework.id, :user_id => answer.user_id) %>
				</td>
				<td>
					<%= answer.content %>
				</td>
			</tr>
		<% end %>
	</tbody>

</table>