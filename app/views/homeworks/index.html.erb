<h1><%= @homework.subject %></h1>

<p><%= @homework.content %></p>

<table class="table table-striped table-hover table-bordered">

	<thead>
		<tr>
			<th>Username</th>
			<th>Latest Answer</th>
		</tr>
	</thead>

	<tbody>
		<% @answers.each do |answer| %>
			<tr>
				<td>
					<%= answer.user.username %>
				</td>
				<td>
					<%= answer.content %>
				</td>
			</tr>
		<% end %>
	</tbody>

</table>